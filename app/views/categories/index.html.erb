<div id="categories">
  <h1 class="jimbo_header"><%= @start_language %> to <%= @end_language %> Categories</h1>

  <ul class="list-group custom">
    <% @categories.each_with_index do |category, index| %>
    <%= link_to questions_path(category: category, start_language: @start_language, end_language: @end_language), :class => 'custom' do %>
        <li class="list-group-item custom list<%=index%>">
          <p><%= category.name %></p>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<script>
  $('.list-group-item').on('mouseover', function() {
    $(this).find('a').css('color', 'white');
    $(this).find('.icon').append('<span class="glyphicon glyphicon-circle-arrow-right"></span>')
  })
  $('.list-group-item').on('mouseout', function() {
    $(this).find('a').css('color', '#428bca');
    $(this).find('.icon').empty()
  })
</script>