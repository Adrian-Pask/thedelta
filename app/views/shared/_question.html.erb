<h4 class="question_index"> <%= link_to question.query, question_path(question)%> </h4>

<% if !question.answers.empty? %>
  <pre class="show_answer" id="Preview_Question_<%=question.id %>">
    
  </pre>
  <p>Submitted by <%= question.answers.first.user.username %></p>
  <button id="Play_Question_<%= question.id %>">Play</button>
<% else %>
  <p><%= link_to 'Submit an answer', question_path(question)%></p>
<% end %>