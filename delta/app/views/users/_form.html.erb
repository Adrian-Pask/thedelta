<%= form_for(user) do |f| %>
  <%= render 'shared/error_messages', object: f.object, html: {:class => "form"} %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirm %><br />
    <%= f.password_field :password_confirm %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
